<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF0E6"
    android:padding="24dp"
    tools:context=".regiony_lokacje.Regiony_lokacje">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Regiony/Lokacje"
        android:textColor="#5C4033"
        android:textSize="24sp"
        android:textStyle="bold|italic"
        android:typeface="serif"
        android:paddingTop="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/btn_region_lokacja_ziemia"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Ziema - ma wodę, góry, drzewa. Jest zielona"
        android:textColorHint="#5C4033"
        android:textSize="18sp"
        android:fontFamily="@font/tagesschrift_regular"
        android:typeface="serif"
        android:backgroundTint="#FFF0E6"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"/>

    <Button
        android:id="@+id/btn_region_lokacja_iratia"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Iratia - ma wodę, góry, drzewa. Jest zielona"
        android:textColorHint="#5C4033"
        android:textSize="18sp"
        android:fontFamily="@font/tagesschrift_regular"
        android:typeface="serif"
        android:backgroundTint="#FFF0E6"
        app:layout_constraintTop_toBottomOf="@id/btn_region_lokacja_ziemia"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

    <Button
        android:id="@+id/btn_region_lokacja_aratja"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:backgroundTint="#FFF0E6"
        android:hint="Aratja - ma wodę, góry, drzewa. Jest zielona"
        android:textColorHint="#5C4033"
        android:textSize="18sp"
        android:fontFamily="@font/tagesschrift_regular"
        android:typeface="serif"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_region_lokacja_iratia" />

</androidx.constraintlayout.widget.ConstraintLayout>