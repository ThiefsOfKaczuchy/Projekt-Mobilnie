<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TextView
        style="@android:style/TextAppearance.DeviceDefault.Headline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="top|center"
        android:text="PodrÄ™cznik do Isela"
        android:textAllCaps="false"
        android:textStyle="bold|italic"

        />
    <LinearLayout
        android:orientation="vertical"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btn_wprowadzenie"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Wprowadznie"
            android:textColorHint="@android:color/holo_red_dark"
            android:textSize="30sp"
            android:drawableBottom="@android:color/holo_red_dark"
            />
        <Button
            android:id="@+id/btn_rasy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Rasy"
            android:textColorHint="@android:color/holo_red_dark"
            android:textSize="30sp"
            />
        <Button
            android:id="@+id/btn_regiony_lokacje"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Regiony/Lokacje"
            android:textColorHint="@android:color/holo_red_dark"
            android:textSize="30sp"
            android:drawableBottom="@android:color/holo_red_dark"
            />
        <Button
            android:id="@+id/btn_magie"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Magie"
            android:textColorHint="@android:color/holo_red_dark"
            android:textSize="30sp"
            />
        <Button
            android:id="@+id/btn_lore"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Lore"
            android:textColorHint="@android:color/holo_red_dark"
            android:textSize="30sp"
            />
    </LinearLayout>

</LinearLayout>